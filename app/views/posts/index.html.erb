<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<div class="container">
  <div class="columns col-gapless">
    <div class="column col-8 centered">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th>Published</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <div class="btn-group btn-group-block">
                <td class="active"><%= post.title %></td>
                <td><%= post.body %></td>
                <td><%= post.published %></td>
                <td><button class="btn"><%= link_to 'View', post %></button></td>
                <td><button class="btn"><%= link_to 'Edit', edit_post_path(post) %></button></td>
                <td><button class="btn"><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
              </div>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>

<button class="btn centered"><%= link_to 'New Post', new_post_path %></button>
